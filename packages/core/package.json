{
  "name": "mediax-sdk",
  "version": "0.1.2",
  "description": "Node.js SDK for ffmpeg media processing (convert, compress, thumbnails, audio, GIF, watermark, frames, etc.)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -w",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm build",
    "test": "vitest run"
  },
  "keywords": ["ffmpeg","media","video","audio","transcoding","sdk","typescript"],
  "author": "Saurav Kale <ksaurav4093@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "fluent-ffmpeg": "^2.1.2"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/node": "^20.0.0",
    "tsx": "^4.20.5",
    "typescript": "^5.5.0",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.12.3",
  "homepage": "https://github.com/ksaurav24/mediax",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ksaurav24/mediax.git"
  }}
